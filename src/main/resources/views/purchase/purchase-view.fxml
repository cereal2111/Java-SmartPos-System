<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.smartpos.ui.purchase.PurchaseController">

    <!-- Header Form -->
    <HBox spacing="15" styleClass="card">
        <VBox spacing="5">
            <Label text="Supplier" />
            <ComboBox fx:id="supplierComboBox" promptText="Select Supplier" prefWidth="250" />
        </VBox>
        <VBox spacing="5">
            <Label text="Date" />
            <DatePicker fx:id="dateField" />
        </VBox>
    </HBox>

    <!-- Item Entry -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
        <TextField fx:id="productIdField" promptText="Product ID" prefWidth="100" />
        <TextField fx:id="quantityField" promptText="Qty" prefWidth="80" />
        <TextField fx:id="costField" promptText="Unit Cost" prefWidth="100" />
        <Button text="Add Item" onAction="#handleAddItem" styleClass="button-primary" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Remove Selected" onAction="#handleRemoveItem" styleClass="button-secondary" />
    </HBox>

    <!-- Table -->
    <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colProductId" text="Product" prefWidth="200" />
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100" />
            <TableColumn fx:id="colCost" text="Unit Cost" prefWidth="100" />
            <TableColumn fx:id="colTotal" text="Total" prefWidth="120" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Footer -->
    <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Label fx:id="totalLabel" text="Total: $0.00"
            style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Button text="Complete Purchase" onAction="#handleSave" styleClass="button-primary"
            style="-fx-font-size: 14px;" />
    </HBox>

</VBox>
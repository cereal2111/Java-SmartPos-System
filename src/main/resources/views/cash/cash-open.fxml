<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.smartpos.ui.cash.CashOpenController"
    spacing="20" alignment="CENTER" styleClass="content-area">

    <Label text="Open Cash Session" styleClass="h1" />
    <Label text="Enter initial cash amount in drawer:" />

    <TextField fx:id="txtOpeningBalance" text="0.00" maxWidth="200" alignment="CENTER" />

    <Button text="Start Shift" onAction="#handleOpenSession" styleClass="button-primary"
        prefWidth="200" prefHeight="40" />

</VBox>
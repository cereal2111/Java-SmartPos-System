<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.smartpos.ui.product.ProductFormController"
    style="-fx-padding: 25; -fx-background-color: white; -fx-min-width: 450;">

    <Label text="Product Information"
        style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />

    <GridPane hgap="15" vgap="15">
        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Code / Barcode" style="-fx-font-weight: bold;" />
            <TextField fx:id="codeField" promptText="e.g. 750100..." />
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Name" style="-fx-font-weight: bold;" />
            <TextField fx:id="nameField" promptText="Product Name" />
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Category" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="categoryCombo" promptText="Select Category" maxWidth="Infinity" />
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Unit of Measure" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="unitCombo" promptText="Select Unit" maxWidth="Infinity" />
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="Sale Price" style="-fx-font-weight: bold;" />
            <TextField fx:id="priceField" promptText="0.00" />
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Label text="Minimum Stock" style="-fx-font-weight: bold;" />
            <TextField fx:id="minStockField" promptText="Alert level" />
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" styleClass="button-secondary" minWidth="80" />
        <Button text="Save Product" onAction="#handleSave" styleClass="button-primary"
            minWidth="120" />
    </HBox>

</VBox>